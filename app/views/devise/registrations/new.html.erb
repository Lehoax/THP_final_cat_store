<h2>S'inscrire</h2>



  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "nouveau mot de passe" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nouveau mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "S'inscrire" %>
  </div>
   <div class="form-floating field" style="margin-bottom:10px" >
    <%# f.label :email %>
	   <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password Confirmation", class:"form-control" %>
	
	 <label for="floatingInput">Password Confirmation</label>
  </div>


	 <button class="w-100 btn btn-lg btn-primary" type="submit" style="align-self">
	    Sign up
	 </button>
<% end %>

<%= render "devise/shared/links" %>