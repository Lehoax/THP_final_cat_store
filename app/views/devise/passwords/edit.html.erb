<div class="container mt-2">


  <main class=" text-center form-signin" style="    
    flex-direction: column;
      display: flex;
      align-items: center;
    height:70vh;
    ">

    <h1 class="h3 mb-3 fw-normal">Changer le mot de passe</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-floating field" style="margin-bottom:10px">
        <%= f.password_field :password, autofocus: true, placeholder: "Nouveau mot de passe", class: "form-control" %>
      </div>

      <div class="form-floating field" style="margin-bottom:10px">
        <%= f.password_field :password_confirmation, placeholder: "Nouveau mot de passe confirmation", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Changer mon mot de passe" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </main>
</div>