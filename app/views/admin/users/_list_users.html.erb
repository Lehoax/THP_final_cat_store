<h4 id='list-users'>Liste des utilisateurs (<%=@users.count%>)</h4>
<div class="table-responsive mb-5">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Nom</th>
        <th>Pr√©nom</th>
        <th>Panier ID</th>
        <th>Nombre de commandes</th>
        <th>Inscription</th>
        <th>Admin</th>
        <th>Supprimer</th>
      </tr>
    </thead>
    <tbody>
        <%@users.sort.each do |user|%>
          <tr id='user<%=user.id%>'>
            <td><%=user.id%></td>
            <td><%=user.email%></td>
            <td><%=user.last_name%></td>
            <td><%=user.first_name %></td>
            <td><%=user.cart.id%></td>
            <td><%=user.orders.count%></td>
            <td><%=user.created_at%></td>
            <td>
              <%= form_with model: [:admin, user], method: :put,local: false, remote: true, class:'text-center' do |form| %>
                <%= form.check_box :admin %>
                <%= form.submit "Valider",class:'btn btn-outline-primary btn-sm' %>
              <% end %>
            <td><a href=<%=admin_user_path(user.id)%> data-method='delete' data-confirm='Valider la suppression ?' data-remote='true' class='btn btn-outline-danger btn-sm' %>Supprimer</a></td>
          </tr>  
        <%end%>
    </tbody>
  </table>
</div>