<h4 id='list-items'>Liste des produits (<%=@items.count%>)</h4>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Titre</th>
        <th>Prix</th>
        <th>date de création</th>
        <th>Voir</th>
        <th>Modifier</th>
        <th>Supprimer</th>
      </tr>
    </thead>
    <tbody>
        <%@items.each do |item|%>
          <tr id='item<%=item.id%>'>
            <td><%=item.id%></td>
            <td><%=item.title%></td>
            <td><%=item.price %> € </td>
            <td><%=item.created_at.strftime('%d/%m/%Y')%></td>
            <td><a href=<%=item_path(item.id)%> class='btn btn__secondary btn-sm' %>Voir</a></td>
            <td><a href=<%=edit_admin_item_path(item.id)%> class='btn btn__secondary btn-sm' %>Modifier</a></td>
            <td><a href=<%=admin_item_path(item.id)%> data-method='delete' data-confirm='Valider la suppression ?' data-remote='true' class='btn btn__secondary btn-sm' %>Supprimer</a></td>
          </tr>  
        <%end%>
    </tbody>
  </table>
</div>
<div class="mt-2 mb-5">
  <%=render 'admin/admin/back_btn'%>
</div>