<div>
  <div class="wrapper__profile">
    <div class="profile">
      <div class="avatar">
        <% if current_user.avatar.attached? %> 
		<%= image_tag        current_user.avatar, alt: "avatar", class: "img_profile" %> 
		<% else %>
        <%= image_tag 'profile_empty', alt: "avatar" , class: "img_profile"%>
		 <% end %>
      </div>
      <div class="name">
        <%= current_user.first_name %> <%= current_user.last_name %>
      </div>
      <button class="button edit__button">Edit profile</button>
    </div>
    <div class="orders__wrapper">
      <h3 class="orders__title">Order</h3>
	  <div class="orders">
	  <% current_user.orders.each do |order|%>
	   <div class="profile__order order__card">
	   	<div class=" order__img">
		    <% if order.items[0].item_image.attached? %> 
        <%= image_tag item.item_image,height:50, alt: "cat"%>
		<% else %>
        <%= image_tag 'cats_hero_image', alt: "cat" %>
		 <% end %>
		   
		   </div>
		<div class=" order__text">
		<h5 class="order__card__title">Order#<%= order.id%></h5>
		<%= order.total %>â‚¬
		<button class="order__card__button">Voir</button>
		</div>
	   </div>
	  <%end%>
	  
	</div>
     
    </div>
  </div>
