<div >

<div class="wrapper__profile">
<div class="profile">
<div class="avatar">
<% if current_user.avatar.attached? %>
  <%= image_tag current_user.avatar, alt: "avatar", class: "img_profile" %>
  <% else %>
  <%= image_tag 'profile_empty', alt: "avatar" , class: "img_profile"%>
<% end %>
</div>
<div class="name">
<%= current_user.first_name %> <%= current_user.last_name %>
</div>
<button class="button edit__button">
Edit profile
</button>
</div>
<div class="orders">
<div class="profile__order order">
</div>
</div>
</div>
<div class="card block-center " style="width: 20rem;">
  <div class="card-body">
  <% if current_user.avatar.attached? %>
  <%= image_tag current_user.avatar, alt: "avatar", class: "img_profile" %>
  <% else %>
  <%= image_tag 'profile_empty', alt: "avatar" , class: "img_profile"%>
<% end %>

    <h4 class="card-title">Profil de utilisateur</h4>
    <h6 class="card-text">Description :</h6>
    <p class="card-text"><%= current_user.email %></p>
    <p class="card-text"><%= current_user.first_name %> <%= current_user.last_name %></p>
    <p class="card-text">Créer le  <%= current_user.created_at %></p>


	<%= link_to "édition", edit_user_registration_path, class: "btn btn-primary"%>
  </div>
</div>
<% @orders.each do |order| %>

<div class="card">
	<%= order.id %>
	<%= order.created_at %>
		<% order.joint_items_orders.each do |joint_item| %>
	<%= joint_item.item.title %>
	<%= joint_item.item.description %>
	<img src=<%= joint_item.item.image_url %> >
	<% end %>
</div>
<% end %>

</div>

