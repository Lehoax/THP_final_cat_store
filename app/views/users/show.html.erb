<hr>
<div style="height:70vh">
<div class="card" style="width: 20rem;">
  <div class="card-body">
  <% if current_user.avatar.attached? %>
  <%= image_tag current_user.avatar, alt: "avatar", class: "img_profile" %>
  <% else %>
  <%= image_tag 'profile_empty', alt: "avatar" , class: "img_profile"%>
<% end %>

    <h5 class="card-title">Profils de l'utilisateur</h5>
    <h3 class="card-text">Description </h3>
    <p class="card-text"><%= current_user.first_name %></p>
    <p class="card-text"><%= current_user.last_name %></p>
	<%= link_to "edit profile", edit_user_registration_path %>
  </div>
</div>
<% @orders.each do |order| %>

<div class="card">
	<%= order.id %>
	<%= order.created_at %>
		<% order.joint_items_orders.each do |joint_item| %>
	<%= joint_item.item.title %>
	<%= joint_item.item.description %>
	<img src=<%= joint_item.item.image_url %> >
	<% end %>
</div>
<% end %>
<hr>

</div>

